<%= form_with(model: memo, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :memo, "詳細情報" %><br />
    <%= f.text_area :memo, class: :form__text, id:"prototype_catch_copy" %>
  </div>

    <div class="field">
      <%= f.label :image, "プロトタイプの画像" %><br />
      <%= f.file_field :image, id:"prototype_image" %>
    </div>


  <div class="field">
    <%= f.label :category_id, "カテゴリー" %><br />
    <%= f.text_area :category_id, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :deadline_id, "目標期日" %><br />
    <%= f.text_area :deadline_id, id:"prototype_image" %>
  </div>

  <div class="field">
    <%= f.label :day_id, "作成日" %><br />
    <%= f.text_area :day_id, id:"prototype_image" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>