<%= form_with(model: memo, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :memo, "詳細情報" %><br />
    <%= f.text_area :memo, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>


  <div class="field"> 
    <%= f.label :category_id, "カテゴリー" %><br />
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"category-select", id:"memo-category"}) %>
  </div>

  <div class="field">
    <%= f.label :deadline_id, "目標期日" %><br />
    <%= f.collection_select(:deadline_id, Deadline.all, :id, :name, {}, {class:"deadline-select", id:"memo-deadline"}) %>
  </div>

  <div class="field">
    <%= f.label :day_id, "作成日" %><br />
    <%= f.collection_select(:day_id, Day.all, :id, :name, {}, {class:"day-select", id:"memo-day"}) %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>